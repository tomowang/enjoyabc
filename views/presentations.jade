extends layout

block content
  .page.thirdary
    include includes/header
    .page-region
      .page-region-content
        each p in presentations
          .span4.place-left
            .image-container.bg-color-blue51(style="width: 100%;")
              .presentation
                img(src="/downloads/#{p.uuid}-0.jpg")
              .overlay #{p.title}
                | <br>
                | #{p.get_date()}
              a.icon-download-2.bottom-right(href="/presentations/#{p.uuid}", target="_blank")
              - if (role === 'admin') {
                a.icon-cancel.top-right(href="#", data-uuid="#{p.uuid}")
              - }
        - if (role === 'admin') {
          a#upload.place-left.bg-color-blue51.icon-upload-3(href="#")
        - }
    //-include includes/footer

  - if (role === 'admin') {
    .dialog.modal#upload_popup
      .modal-header Add Presentation
        i.icon-cancel.close
      .modal-content
        .alert.bg-color-red
          span
          i.icon-cancel
        form.box#fileupload(action="/presentations", method="POST", enctype="multipart/form-data")
          .progress-bar
            .bar.bg-color-red
          .input-control.text
            input#title(name="title", type='text', required="required", placeholder="Title")
            button.helper(type="button", tabindex="-1")
          .input-control
            input#presentation(name="presentation", required="required", type='file', accept="application/pdf")
          button.bg-color-blue.fg-color-white#uploadbtn(type="submit") Upload
          a.button.close.bg-color-red.fg-color-white#cancel Cancel
  - }

block js
  - if (role === 'admin') {
    script(type='text/javascript')
      ;(function($){
        $(document).ready(function(e){
          var popup = $('#upload_popup');
          $('#upload').click(function(e){
            $('.alert', popup).hide();
            popup.lightbox_me();          
          });
          $('form').ajaxForm({
            dataType: 'json',
            beforeSerialize: function($form, options){
              $('#title', $form).val($.trim($('#title', $form).val()));
              if(!$('#title', $form).val() || !$('#presentation', $form).val()){
                return false;
              }
            },
            beforeSubmit: function(formData, jqForm, options){
              var $form = jqForm[0];
              $('.close', $form).addClass('disabled').attr('disabled', 'disabled');
              $('.bar', $form).css('width', '0%');
            },
            uploadProgress: function(e, position, total, done){
              $('.bar', popup).css('width', done + '%');
            },
            success: function(data){
              window.location.href = '/presentations';
            },
            error: function(jqXHR, textStatus, errorThrown){
              $('.close', popup).removeAttr('disabled').removeClass('disabled');
              var rt = jqXHR.responseText
                , jsrt = {};
              try{
                jsrt = $.parseJSON(rt);
              }catch(e){
              }
              if(jsrt.error){
                $('.alert span', popup).html(jsrt.error);
                $('.alert', popup).show();
              }
            }
          });
          $('.alert .icon-cancel').click(function(e){
            $(this).parent('.alert').hide();
          });
          $('a.icon-cancel').click(function(e){
            var _this = $(this);
            $.ajax({
              url: '/presentations/' + _this.data('uuid'),
              type: 'DELETE',
              success: function(data){
                _this.parent('.image-container').remove();
              }
            });
          });
        });
      })(jQuery);
  - }

